<div class="row mb-3">
    <div class="col-md-8 offset-md-2">
        <h1>
            <%= current_user.username %>'s Likes
        </h1>
    </div>
    <div class="card mt-3 mb-5">
        <div class="card-header">
            <a href="/users/<%= current_user.id %>/"><%= current_user.username %></a>'s Likes
        </div>
        <div class="card-body">
            <ul class="list-group">
                <% @my_likes.each do |liked_photos| %>
                  <li class="list-group-item">
                    <a href="/photos/<%= liked_photos.id %>"><img src="<%= liked_photos.image %>" width="100%"></a>
                  </li>
                  <li class="list-group-item">
                    <%= liked_photos.caption %>
                  </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>